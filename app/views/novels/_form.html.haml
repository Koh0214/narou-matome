= form_for @novel do |f|
  - if @novel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@novel.errors.count, "error")} prohibited this novel from being saved:"
      %ul
        - @novel.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :review
    = f.text_area :review
  .field
    = f.label :url
    = f.text_area :url
  .field
    = f.label :amazon_url
    = f.text_area :amazon_url
  .field
    = f.label :matome
    = f.text_field :matome
  .actions
    = f.submit 'Save'
