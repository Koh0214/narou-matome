%p#notice= notice

%p
  %b Title:
  = @matome.title
%p
  %b Discription:
  = @matome.discription
%p
  %b Like:
  = @matome.like
%p
  %b User:
  = @matome.user

= link_to 'Edit', edit_matome_path(@matome)
\|
= link_to 'Back', matomes_path

-# コメント下のフォーム
-# 【novelのカラム】
-# id: nil,
-# title: nil,
-# discription: nil,
-# review: nil,
-# url: nil,
-# amazon_url: nil,
-# matome_id: nil,
-# created_at: nil,
-# updated_at: nil
.row
  .mx-auto.mt-4
    = form_for @novel do |f|
      = f.label :名前
      =f.hidden_field :matome_id, :value => @matome.id
      = f.text_field :title, placeholder:"小説名", required: "required"
      = f.text_area :discription, :placeholder=>'詳細説明', class: "mt-2 d-block under-comment-text", required: "required"
      = f.text_area :review, :placeholder=>'レビュー', class: "mt-2 d-block under-comment-text", required: "required"
      .m-3
        = f.submit "コメントする", class: "btn btn-primary px-5 mx-auto d-block"
