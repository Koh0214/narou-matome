#myModal.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered.mx-auto{:role => "document"}
    .modal-content
      -# .modal-header
      -#   %button.close{"aria-label" => "閉じる", "data-dismiss" => "modal", :type => "button"}
      -#     .pt-3{"aria-hidden" => "true"} ×
      .modal-body
        %button.close{"aria-label" => "閉じる", "data-dismiss" => "modal", :type => "button"}
          .pt-3{"aria-hidden" => "true"} ×
        .row
          .mx-auto.mt-4
            = form_for novel , :remote => true do |f|
              = f.text_field :url, placeholder:"小説URL", required: "required", id: "modal-novel-url"
              .button.btn.btn-primary#get-novel-info-button
                URL読み込み
              .small.text-muted.mb-4
                ※URL入力後右の「URL読み込み」ボタンを押してください
              = f.text_field :title, placeholder:"小説名", id: "modal-novel-title", required: "required"
              = f.text_area :description, :placeholder=>'あらすじ', id: "modal-novel-description", class: "mt-2 d-block under-comment-text", required: "required"
              = f.text_area :review, :placeholder=>'おすすめポイントを書いてください！', id: "modal-novel-review", class: "mt-2 d-block under-comment-text", required: "required"
              = f.hidden_field :matome_id, :value => matome.id
              .m-3
                = f.submit "小説を追加する", class: "btn btn-primary px-5 mx-auto d-block", data: { disable_with: "小説を追加する"}
